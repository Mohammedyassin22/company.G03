@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<br />
<br />
<div style="width: 150px; height: 150px; overflow: hidden; border-radius: 10px;">
    <img src="/files/Images/@Model.Image" alt="Employee Image" style="width: 100%; height: 100%; object-fit: cover;">
</div>


<div>

    <partial name="EmpPartial\PartialView" />
    <a asp-controller="Employee" asp-route-id="@Model.Id" asp-action="Edit" class="btn btn-warning">Edit</a>
    <a asp-action="index" class="btn btn-primary">Back to list</a>
</div>



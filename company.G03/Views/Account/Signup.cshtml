
@model SignUpDto

@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="signup">
    <form asp-action="Signup" asp-controller="Account" method="post">

        <label for="chk" aria-hidden="true">Sign Up</label>
        <div class="m-3">
            <div class="form-group">
                <input asp-for="UserName" class="form-control" placeholder="User Name" required>
                
            </div>
           
            <div class="form-group">
                <input class="text" asp-for="FirstName" placeholder="First Name" required>
            </div>

            <div class="form-group">
                <input class="text" asp-for="LastName" placeholder="Last Name" required>
            </div>

            <div class="form-group">
                <input class="text email" asp-for="Email" placeholder="Email" required>
            </div>

            <div class="form-group">
                <input class="text" asp-for="Password" placeholder="Password" required>
            </div>

            <div class="form-group">
                <input class="text w3lpass" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="checkbox-container">
                <input asp-for="IsAgree" type="checkbox" id="agree" class="checkbox">
                <label for="agree" class="checkbox-label">I Agree To The Terms & Conditions</label>
            </div>
            <span asp-validation-for="IsAgree" class="text-danger"></span>


        </div>

        <div class="form-group">
        <button>Sign Up</button>
       </div>
    </form>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

@model List<AddInRemoveDto>
@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .users-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    
    .users-table th, .users-table td {
        padding: 12px 15px;
        text-align: right;
        border-bottom: 1px solid #ddd;
    }
    
    .users-table th {
        background-color: #f8f9fa;
        font-weight: bold;
    }
    
    .users-table tr:hover {
        background-color: #f5f5f5;
    }
    
    .checkbox-cell {
        text-align: center;
    }
    
    .action-buttons {
        margin-top: 20px;
    }
    
    .btn-submit {
        background-color: #28a745;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    
    .btn-submit:hover {
        background-color: #218838;
    }
</style>

<h1>User management</h1>

<form asp-action="AddOrRemoveUser" method="post">
    <input type="hidden" name="roleID" value="@ViewBag.RoleId" />

    <table class="table">
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.email</td>
                <td>
                    <input type="checkbox" name="selectedUsers" value="@user.UserId" @(user.IsSelected ? "checked" : "") />
                </td>
            </tr>
        }
    </table>
    <input type="submit" value="Update" class="btn btn-success" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@model RoleToReturnDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<br />
<br />
<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="id" class="col-form-label"></label>
        <input readonly asp-for="id" class="form-control" />
        <span asp-validation-for="id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="name" class="col-form-label"></label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <br />
    <a asp-action="AddOrRemoveUser"asp-route-roleId=@Model.id class="btn btn-success">Add or Remove user</a>
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="index" class="btn btn-primary">Back to list</a>

</form>
<!-- Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success fade show" role="alert" id="successAlert">
        @TempData["SuccessMessage"]
    </div>
}

<!-- Error Message -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger fade show" role="alert" id="errorAlert">
        @TempData["ErrorMessage"]
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-hide success message after 3 seconds
            setTimeout(function () {
                $('#successAlert').fadeOut('slow');
            }, 3000);

            // Auto-hide error message after 3 seconds
            setTimeout(function () {
                $('#errorAlert').fadeOut('slow');
            }, 3000);
        });
    </script>
}